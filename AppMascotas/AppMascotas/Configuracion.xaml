<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMascotas.Configuracion"
             Title="Ajustes"
             IconImageSource="mj.png">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblEmail" Text="" FontAttributes="Bold"/>
            
            <StackLayout Grid.Row="0" Padding="30,70">
                <Label Text="AppMascotas" FontAttributes="Bold"/>
                <Label Text="Prototipo de App para generar DNI de mascotas y llevar un registro de las mascotas de un distrito. "/>
                <Image Source="https://www.salud.mapfre.es/media/2016/07/ninos-mascotas-3.jpg"></Image>
            </StackLayout>
            
            <StackLayout Grid.Row="1" Padding="30,70">
                <Label Text="Version"  FontAttributes="Bold"/>
                <Label Text="AppMascotas V 0.1"/>
                <Button Text="Cerrar Sesion" BackgroundColor="#FF8000" Image="" TextColor="White" FontAttributes="Bold" CornerRadius="10" Clicked="Button_Clicked"/>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>